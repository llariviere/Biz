<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bizswiper.bizcard" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bizcard</name>
    <description>
       Bizswiper without scan.
    </description>
    <author email="bizswiper@gmail.com" href="https://bizswiper.com">
        Bizswiper Team
    </author>
    <content src="index.html" />
    <access origin="https://vision.googleapis.com" />
    <access origin="https://*.bizswiper.com" />
    <allow-navigation href="https://*.bizswiper.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="img/favicon.png" />
    
    <preference name="SplashScreenDelay" value="4000" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="15" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <allow-intent href="market:*" />
              <!-- Portrait -->
        <splash src="res/android/splash-portrait-ldpi.png" density="port-ldpi" width="320" height="426" />
        <splash src="res/android/splash-portrait-mdpi.png" density="port-mdpi" width="320" height="470" />
        <splash src="res/android/splash-portrait-hdpi.png" density="port-hdpi" width="480" height="640" />
        <splash src="res/android/splash-portrait-xhdpi.png" density="port-xhdpi" width="720" height="960" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <splash src="res/screen/Default@2x~universal~anyany.png" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.3" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.4.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.6" />
    <plugin name="cordova-plugin-geolocation-permission-status" source="npm" spec="~1.0.0" />
</widget>
