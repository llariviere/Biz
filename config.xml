<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bizswiper.bizcard" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bizcard</name>
    <description>
       Bizswiper without scan.
    </description>
    <author email="bizswiper@gmail.com" href="https://bizswiper.com">
        Bizswiper Team
    </author>
    <content src="index.html" />
    <access origin="https://bizswiper.com/" />
    <allow-navigation href="https://*.bizswiper.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="img/favicon.png" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="15" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.3" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.4.1" />
</widget>
